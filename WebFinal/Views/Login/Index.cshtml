@model WebFinal.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div>
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-4" style="margin-top: 10px; ">
                <div class="card bg-gradient" style="border-radius: 8%;">
                    <div class="card-body px-lg-5 py-lg-4">
                        <div class="text-center text-muted mb-5">
                            <h2 style="text-decoration:underline; text-decoration-color:black;">Login</h2>
                        </div>
                          <form asp-action="LoginUser" method="post">
                             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                             <div class="form-group">
                              <input asp-for="User" type="text" class="form-control" placeholder="Informe o login">
                              <span asp-validation-for="User" class="text-danger"></span>
                             </div>

                             <p></p>

                             <div class="form-group">
                              <input asp-for="Password" type="password" class="form-control"  placeholder="Informe a senha">
                              <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <p></p>
                            <button type="submit" class="btn btn-dark" style="width:26vw">Entrar</button>
                            <br />
                            <br />
                            <a asp-action="NovoUsuario" target="_blank"> Criar Usuario</a>
                         </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
