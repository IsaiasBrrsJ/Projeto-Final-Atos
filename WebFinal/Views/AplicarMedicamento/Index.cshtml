@model IEnumerable<APiProjetoFinal.Models.PacienteMedicamento>

@{
    ViewData["Title"] = "Index";
}


<table class=" table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente.CPF)
            </th>
            <th>
                <label>Data/Hora Aplicada</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Medicamento.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nome)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.CPF)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraAplicacaoMedicamento)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-dark">Editar</button></a> |
               <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-dark">Detalhes</button></a> 

            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Create"><button type="button" class="btn btn-dark">Aplicar Medicamento</button></a>