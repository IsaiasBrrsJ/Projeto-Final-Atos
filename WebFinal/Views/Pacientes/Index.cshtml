@model IEnumerable<APiProjetoFinal.Models.Paciente>

@{
    ViewData["Title"] = "Paciente";
}


<h5 style ="text-align:center; padding-right: 40px;">Pacientes Cadastrados<h6>
<table id="example" class="table table-striped table-hover table-sm" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th style="padding-left: 35px;">
               @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
              <label>Endereço</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <label style="padding-left: 5px;">@item.Idade</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td >

               <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-dark">Editar</button></a> |
               <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-dark">Detalhes</button></a> |
               <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-dark">Deletar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-dark">Cadastrar Paciente</button></a>
</p>

<style>
    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: black;
        border-color: black;
        border-radius: 3px;
    }
</style>
