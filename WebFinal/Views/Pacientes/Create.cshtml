@using APiProjetoFinal.Models;
@model APiProjetoFinal.Models.Paciente

@{
    ViewData["Title"] = "Adcionar Paciente";
   
}


<div class="row" >
    <p style="text-align:center; padding-top:10px; text-decoration:underline; color:black;">Cadastrar Paciente</p>
    <hr />
    <div class="col-md-3" style="margin:auto;">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome"  class="control-label"></label>
                <input asp-for="Nome"   class="form-control" placeholder="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" placeholder="Idade"/>
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" placeholder="CPF, Apenas Números" />
                <span asp-validation-for="CPF" class="text-danger"></span>
                <p style="color:red;">@ViewBag.CPFcadastrado</p>
    
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" placeholder="Endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group" >
                <input  type="submit" value="Cadastrar" class="btn btn-dark" style="width:19vw"/>
                <p></p>
                <a asp-action="Index"><button type="button" class="btn btn-dark" style="width:19vw;">Voltar</button></a>
              
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
