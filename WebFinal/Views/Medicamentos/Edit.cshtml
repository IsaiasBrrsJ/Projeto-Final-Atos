@model APiProjetoFinal.Models.Medicamento

@{
    ViewData["Title"] = "Edit";
}



<div class="row">
    <p style="text-align:center; padding-top:10px; text-decoration:underline; color:black;">Editar Medicamento</p>
    <hr />
    <div class="col-md-4" style="margin:auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMedicamento" class="control-label">Tipo de Medicamento</label>
                <input asp-for="TipoMedicamento" class="form-control" />
                <span asp-validation-for="TipoMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeValidade" class="control-label">Data de Validade</label>
                <input asp-for="DataDeValidade" class="form-control" />
                <span asp-validation-for="DataDeValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricao" class="control-label">Descrição</label>
                <textarea  asp-for=" descricao" class="form-control" placeholder="Descrição do medicamento"></textarea>
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-dark" style="width:26vw;" />
                <br />
                <br />
                <a asp-action="Index"><button style="width: 26vw;" type="button" class="btn btn-dark">voltar</button></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
